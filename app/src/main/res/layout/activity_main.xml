<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KALKULATOR"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/black"
        />
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etfloat"
        android:inputType="number"
        android:layout_below="@+id/tv_judul"
        />

    <Button
        android:id="@+id/bCos"
        android:text="COS"
        android:textSize="19dp"
        android:layout_width="122dp"
        android:layout_height="59dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="58dp"
        android:layout_below="@+id/etfloat"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        />

    <Button
        android:id="@+id/bSin"
        android:text="SIN"
        android:textSize="19dp"
        android:layout_width="122dp"
        android:layout_height="59dp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="58dp"
        android:layout_toRightOf="@+id/bCos"
        android:layout_below="@+id/etfloat"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/bTan"
        android:text="TAN"
        android:textSize="19dp"
        android:layout_width="122dp"
        android:layout_height="59dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="141dp"
        android:layout_toRightOf="@+id/bSin"
        android:layout_below="@+id/etfloat"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/bCosec"
        android:text="Cosec"
        android:textSize="19dp"
        android:layout_width="122dp"
        android:layout_height="59dp"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="58dp"
        android:layout_below="@+id/bCos"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        />
        />

    <Button
        android:id="@+id/bSec"
        android:text="SEC"
        android:textSize="19dp"
        android:layout_width="122dp"
        android:layout_height="59dp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="141dp"
        android:layout_below="@+id/bSin"
        android:layout_toRightOf="@+id/bCosec"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/bCtg"
        android:text="Ctg"
        android:textSize="19dp"
        android:layout_width="122dp"
        android:layout_height="59dp"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="141dp"
        android:layout_below="@+id/bSin"
        android:layout_toRightOf="@+id/bSec"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/bLog"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bSec"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="23dp"
        android:text="LOGARITMA"
        android:textSize="21dp" />


    <TextView
        android:id="@+id/tv_texthasil"
        android:text="HASIL"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bLog"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvhasil"
        android:text="0.0"
        android:textSize="35dp"
        android:layout_below="@+id/tv_texthasil"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        />
</RelativeLayout>